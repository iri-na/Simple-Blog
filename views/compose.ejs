<%- include('partials/header') -%>

<h1>Compose</h1>
<form method="post" action="/compose">

    <div class="form-group">
        <label class="form-label">Title</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off">

        <label class="form-label">Post</label>
        <textarea class="form-control" name="postContent" rows="5" cols="60"></textarea>
    </div>

    <button type="submit" name="button" class="btn btn-primary">Publish</button>

</form>



<%- include('partials/footer') -%>