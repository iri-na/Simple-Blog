<%- include('partials/header') -%>

<h1>Home</h1>

<p><%= startingContent %></p>


 <% for(var i = posts.length - 1; i >= 0; i--) { %>
     <% const titleLink = posts[i].title; %>
     <% const titleID = posts[i].id; %>
     <% const blogPost = posts[i].content; %>

     <a href="posts/<%= titleID %>"><h1><%= titleLink %></h1></a>
     <%if (blogPost.length > 300) { %>
         <% const postPreview = blogPost.substring(0,300) + " ..."; %>
         <p><%= postPreview %></p>
     <% } else{ %>
     <p><%= blogPost %></p>
     <% } %>

 <%}%>

<%- include('partials/footer') -%>